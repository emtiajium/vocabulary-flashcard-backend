{
    "name": "ielts-gibberish",
    "version": "0.23.0",
    "author": {
        "name": "Emtiaj Hasan",
        "email": "271emtiaj@gmail.com",
        "url": "https://www.linkedin.com/in/emtiajium/"
    },
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": "14.x"
    },
    "scripts": {
        "create:env": "node -r fs -e \"fs.copyFileSync('.env.sample', '.env', fs.constants.COPYFILE_EXCL)\"",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"migrations/*.ts\" \"src/**/*.ts\" \"test/**/*.ts\" \"*.md\" \"*.json\"",
        "format:check": "prettier --check \"migrations/*.ts\" \"src/**/*.ts\" \"test/**/*.ts\" \"*.md\" \"*.json\"",
        "start:dev": "nest start --watch",
        "start:prod": "npm run build && npm run typeorm migration:run && node dist/src/main.js",
        "lint:config": "eslint --print-config src/main.ts",
        "lint": "eslint \"{migrations,src,test}/**/*.ts\" --fix",
        "lint:check": "eslint \"{migrations,src,test}/**/*.ts\"",
        "test": "jest --detectOpenHandles --forceExit",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "seed-script:insert-vocabularies": "node -r ts-node/register -r tsconfig-paths/register src/manual-scripts/seed-script.ts",
        "seed-script:insert-test-users": "node -r ts-node/register -r tsconfig-paths/register src/manual-scripts/CreateTestUsers.ts"
    },
    "dependencies": {
        "@nestjs/common": "^7.6.15",
        "@nestjs/config": "^0.6.3",
        "@nestjs/core": "^7.6.15",
        "@nestjs/platform-express": "^7.6.15",
        "@nestjs/swagger": "^4.8.2",
        "@nestjs/terminus": "^8.0.6",
        "@nestjs/typeorm": "^7.1.5",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cookie-parser": "^1.4.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-basic-auth": "^1.2.1",
        "fast-safe-stringify": "^2.0.7",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.7",
        "swagger-ui-express": "^4.1.6",
        "typeorm": "^0.2.32",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.6.0",
        "@nestjs/schematics": "^7.3.0",
        "@nestjs/testing": "^7.6.15",
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.22",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/lodash": "^4.14.170",
        "@types/node": "^14.14.36",
        "@types/supertest": "^2.0.10",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.25.0",
        "eslint": "^7.22.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.23.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-unicorn": "^32.0.1",
        "jest": "^26.6.3",
        "jest-junit": "^12.1.0",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.0.18",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.3"
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "./coverage",
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/main.ts",
            "!test/**/*"
        ],
        "maxWorkers": 1,
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "moduleNameMapper": {
            "^@/(.*)": "<rootDir>/src/$1",
            "^@test/(.*)": "<rootDir>/test/$1",
            "^@root/(.*)": "<rootDir>/$1"
        },
        "reporters": [
            "default",
            [
                "jest-junit",
                {
                    "outputDirectory": "./coverage"
                }
            ]
        ],
        "rootDir": ".",
        "setupFiles": [
            "<rootDir>/test/jest-init.ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "<rootDir>/test/{e2e,integration,unit}/**/*.ts"
        ],
        "testTimeout": 5000,
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "verbose": true
    }
}
